<% if logged_in? %>
  <% content_for :head do %>
    <meta name="description" content="<%= current_user.name %>のモノページ．<%= current_user.name %>の欲しいモノ，持ってるモノを表示しています．"　/>
    <title><%= @item.title %> - Monolist</title>
  <% end %>
<% end %>
<div class="box">
  <h2 class="box-title">ログイン</h2>
  <div class="box-inner">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="submit-group">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>